{
  "id": "graphql-request",
  "name": "GraphQL Request",
  "description": "GraphQL query/mutation request",
  "category": "HTTP",
  "template": {
    "graphql": {
      "operationType": "query",
      "operationName": "GetUser",
      "query": "query GetUser($id: ID!) { user(id: $id) { id name email } }",
      "variables": {
        "id": "user-123"
      },
      "extensions": {},
      "context": {
        "user": {
          "id": "requester-456",
          "roles": ["admin"]
        },
        "headers": {
          "authorization": "Bearer token..."
        }
      }
    }
  }
}
